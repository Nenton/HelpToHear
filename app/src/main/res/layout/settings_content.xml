<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/spacing_large_56"
    tools:context="com.nenton.speechya.ui.activities.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_api_key_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите API-ключ"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/edit_api_key_button">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/edit_api_key_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Изменить"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/txt_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Язык речи"
        android:layout_below="@+id/edit_api_key_field"/>
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/spinner_language"
        android:layout_below="@+id/txt_speech">
    </android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:id="@+id/txt_speech_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Голос синтеза"
        android:layout_below="@+id/spinner_language"/>
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/spinner_voice"
        android:layout_below="@+id/txt_speech_voice">
    </android.support.v7.widget.AppCompatSpinner>

</RelativeLayout>