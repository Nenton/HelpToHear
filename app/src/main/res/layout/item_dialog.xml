<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewCustom"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        style="@style/MWParent"
        android:padding="@dimen/spacing_small_8">

        <TextView
            android:id="@+id/date_last_message_dialog"
            style="@style/WWParent"
            android:textColor="@color/grey_light"/>

        <TextView
            android:id="@+id/last_message_dialog"
            style="@style/TextMessageLast"
            android:layout_below="@+id/date_last_message_dialog"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>