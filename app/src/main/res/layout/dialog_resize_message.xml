<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ScrollView
        android:id="@+id/resize_message_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/resize_message_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingBottom="32dp">
        </TextView>
    </ScrollView>

    <ImageView
        android:id="@+id/resize_message_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:src="@drawable/ic_volume_up_black_24dp"/>

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/resize_message_progressbar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="gone"
        app:cpb_colors="@array/colors_progressbar"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="3dp"
        app:cpb_sweep_speed="1.0"
        />
</RelativeLayout>