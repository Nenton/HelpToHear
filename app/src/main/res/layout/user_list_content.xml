<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/messages_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_large_56"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_small_8"
        android:paddingRight="@dimen/spacing_small_8"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/volume_power"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/write_bar"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/volume_power">

        <ProgressBar
            android:id="@+id/voice_power_bar"
            style="@style/VoiceVolumeStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:max="100"
            android:progress="0"
            />
        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Старт"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/write_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/write_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_medial_24"
            android:hint="Введите текст"
            />

        <ImageView
            android:id="@+id/send_message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_send_black_24dp"/>
    </RelativeLayout>


</RelativeLayout>