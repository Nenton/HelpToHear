<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    style="@style/DrawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.DialogsActivity">

    <android.support.design.widget.CoordinatorLayout
        style="@style/MMParent">

        <android.support.design.widget.AppBarLayout
            style="@style/MWParent"
            app:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/dialogs_toolbar"
                style="@style/ToolbarLayoutCustom"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialogs_recycle"
            style="@style/RecycleViewCustom"
            android:paddingLeft="@dimen/spacing_normal_16"
            android:paddingRight="@dimen/spacing_normal_16"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>
